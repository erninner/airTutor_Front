/* pages/landing_page/landing_page.wxss */
.banner {
  color: white;
  text-align: center;
  height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-image: url('https://wqkt.com/wp-content/uploads/2020/10/tutoring-980x656.jpg');
  background-position: center -30px;
  background-repeat: no-repeat;
  background-size: cover !important;
  padding:30px;
}
.headline {
  margin-top: 100px;
  font-size: 40px;
  padding:0px;
  font-weight: bold;
  text-shadow: 0px 0px 3px rgba(0, 0, 0, 0.6);
}
.action {
  font-size: 25px;
  font-weight: bold;
  color: rgb(255, 255, 255);
  text-shadow: 0px 0px 3px rgba(0, 0, 0, 0.6);
  margin: 30px;
}
.container {
  padding: 10px 0px;
  background-color: #F2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.info {
  margin-top: 50px;
  text-align: center;
}

.box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


button {
  margin:15px;
}